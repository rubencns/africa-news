---
import articlesEs from "../database/articles-es.json"
import { formatDate, formatDateTime } from "../utils/formatDate"
---

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const videoElement = document.querySelector(
      ".background-video source"
    ) as HTMLVideoElement
    const videos = [
      "https://videos.pexels.com/video-files/29603787/12740644_1920_1080_60fps.mp4",
      "https://videos.pexels.com/video-files/19115721/19115721-uhd_2560_1440_24fps.mp4",
      "https://videos.pexels.com/video-files/20363056/20363056-uhd_2560_1440_30fps.mp4",
      "https://videos.pexels.com/video-files/19886376/19886376-uhd_2560_1440_24fps.mp4",
      "https://videos.pexels.com/video-files/27939164/12267485_2560_1440_25fps.mp4",
      "https://videos.pexels.com/video-files/27165160/12087843_2560_1440_25fps.mp4",
    ]

    const randomIndex = Math.floor(Math.random() * videos.length)
    videoElement.src = videos[randomIndex]
    ;(videoElement.parentNode as HTMLMediaElement).load()
  })
</script>

<div class="header-top">
  <p class="header-date">ES | {formatDateTime(new Date())}</p>
</div>
<header class="header">
  <div>
    <img class="header-logo" src="../logo-white.png" alt="츼frica al D칤a" />
    <h1 class="header-title">츼frica al D칤a</h1>
  </div>
  <p class="header-description">
    Las noticias m치s relevantes sobre 츼frica publicadas en los principales
    medios de comunicaci칩n de Espa침a.
  </p>
  <div class="country-selector">
    <button class="country active">游쥟릖 Todos</button>
    <button class="country">游游 Nigeria</button>
    <button class="country">游游 Sud치frica</button>
    <button class="country">游쀯릖 Egipto</button>
    <button class="country">游쓇릖 Marruecos</button>
    <button class="country">游쓇릖 Angola</button>
    <button class="country">游썷릖 Kenia</button>
    <button class="country">游좷릖 Tanzania</button>
    <button class="country">游섫릖 Ghana</button>
  </div>

  <video
    class="background-video"
    autoplay
    loop
    muted
    playsinline
    poster="src/assets/background-header.jpg"
  >
    <source type="video/mp4" />
    <img
      src="src/assets/background-header.jpg"
      title="Your browser does not support the <video> tag"
    />
    Your browser does not support the video tag.
  </video>
</header>

<main class="main">
  {
    articlesEs
      .sort(
        (a, b) =>
          new Date(b.publishedAt).getTime() - new Date(a.publishedAt).getTime()
      )
      .map((article) => (
        <a
          class="article-link"
          href={article.url}
          target="_blank"
          rel="noopener noreferrer"
        >
          <article class="article">
            <img
              class="article-image"
              src={article.image}
              alt={article.title}
            />
            <p style={{ fontStyle: "italic" }}>
              {formatDate(new Date(article.publishedAt))}
            </p>
            <h3 class="article-title">{article.title}</h3>
            <p>{article.description}</p>
            <div class="article-source">
              <p>{article.source.name}</p>
            </div>
          </article>
        </a>
      ))
  }
</main>

<style>
  .header-top {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    background: var(--black-color);
    width: 100%;
    padding: 0.5rem;
    color: var(--white-color);

    a {
      color: var(--white-color);
      text-decoration: none;
      text-decoration: underline;
    }
  }

  .header {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    padding: 1.5rem 2rem 2rem;
    position: relative;
    color: var(--white-color);

    .background-video {
      position: absolute;
      top: 0;
      left: 0;
      min-width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -1;
      filter: brightness(0.5);
    }

    .header-logo {
      display: grid;
      margin: auto;
      width: 2.5rem;
      margin-bottom: 1rem;
    }

    .header-date {
      font-size: 0.95rem;
      text-align: center;
    }

    .header-title {
      font-size: 4rem;
      text-transform: uppercase;
      text-align: center;

      img {
        width: 4rem;
      }
    }

    .header-description {
      max-width: 500px;
      font-size: 1.15rem;
      text-align: center;
    }

    .country-selector {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-top: 2.5rem;
      overflow-x: auto;
      max-width: 600px;

      .country {
        display: flex;
        justify-content: center;
        min-width: fit-content;
        padding: 0.25rem 0.75rem;
        border-radius: 0.5rem;
        border: 0.0625rem solid var(--neutral-light-color);
        background-color: var(--white-color);
        color: var(--black-color);
        font-family: "DM Serif Text", serif;
        font-size: 1.1rem;
        cursor: pointer;
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1);

        &.active,
        &:hover {
          background-color: var(--black-color);
          color: var(--white-color);
        }
      }
    }
  }

  .main {
    margin: 0 auto;
    max-width: 800px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    padding: 3rem 1rem;

    .article-link {
      text-decoration: none;
      color: var(--black-color);
    }

    .article {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;

      &:hover {
        .article-title {
          text-decoration: underline;
        }
      }

      .article-image {
        border-radius: 0.25rem;
      }

      .article-title {
        font-size: 1.5rem;
      }

      .article-source {
        margin-top: 0.5rem;
        background-color: var(--neutral-light-color);
        color: var(--black-color);
        font-size: 0.875rem;
        padding: 0.4rem 0.9rem;
        border-radius: 1rem;
        width: fit-content;
      }
    }
  }

  @media (max-width: 800px) {
    .header {
      .header-title {
        font-size: 2.5rem;
      }

      .header-description {
        font-size: 1rem;
      }

      .country-selector {
        width: 100vw;

        .country {
          font-size: 1rem;
        }
      }
    }

    .main {
      grid-template-columns: 1fr;
    }
  }
</style>
